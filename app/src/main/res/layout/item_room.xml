<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_room_item"
        android:layout_width="150dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_room_item_name"
            android:text="豪华单人房"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_room_item_plane"
            android:layout_marginTop="8dp"
            android:text="30m² 大床 4点评"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_room_item_satisfaction"
            android:layout_marginTop="8dp"
            android:text="预定满意度95%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="16dp"
            android:text="满100减10"
            android:background="@drawable/room_item_bg"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_room_item_price"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20sp"
            android:text="¥288"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_room_item_reserve"
            android:background="@drawable/room_item_yu_bg"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"
            android:text="预定"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>