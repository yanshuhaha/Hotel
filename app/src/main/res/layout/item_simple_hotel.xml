<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/linear_simple_item"
    android:background="@drawable/bubble">

    <TextView
        android:id="@+id/tv_name_simple_item"
        android:textColor="@android:color/white"
        android:text="xxxx宾馆"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_score_simple_item"
        android:layout_below="@id/tv_name_simple_item"
        android:text="4.4分"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_price_simple_item"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/tv_name_simple_item"
        android:layout_toRightOf="@id/tv_score_simple_item"
        android:text="$488"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>