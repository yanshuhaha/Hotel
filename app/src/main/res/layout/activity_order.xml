<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.tao.hotel.activity.OrderActivity">

    <android.support.v7.widget.Toolbar
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_toolbar_order_back"
            android:background="@drawable/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:text="订单信息"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--根布局    -->

            <com.tao.hotel.view.TimeLineLayout
                android:id="@+id/timeLineLayout_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="20dp"
                android:paddingRight="16dp"
                app:tll_dotColor="@color/colorAccent"
                app:tll_dotRadius="4dp"
                app:tll_height="40dp"
                app:tll_lineColor="#E4E4E4"
                app:tll_lineWidth="1px"
                app:tll_padding="16dp"
                app:tll_textColor="@android:color/black"
                app:tll_textSize="14sp"></com.tao.hotel.view.TimeLineLayout>

            <LinearLayout
                android:background="@drawable/order_linear_bg"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="订单状态"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_order_pay_status"
                    android:textColor="@android:color/holo_red_light"
                    android:text="待支付"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="14sp"
                    android:text="订单状态"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@drawable/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:background="@drawable/order_linear_bg"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="预付房款"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_order_pay_money"
                    android:textColor="@android:color/black"
                    android:text="￥588"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="14sp"
                    android:text="费用明细"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@drawable/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:background="@drawable/order_linear_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_order_hotel_name"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="佛山南海华美达酒店"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_order_hotel_location"
                        android:layout_marginTop="8dp"
                        android:text="狮山博爱路61号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/order_linear_bg"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_light"
                    android:text="地图"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_light"
                    android:text="导航"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_blue_light"
                    android:text="联系"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:background="@drawable/order_linear_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_order_room_class"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="商务房"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_order_room_dir"
                        android:layout_marginTop="8dp"
                        android:text="早餐：无 wifi：免费"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/order_linear_bg"
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_order_together_time"
                    android:layout_gravity="center|top"
                    android:text="共1晚"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_order_start_time"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:text="入住：1月14日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="......."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_order_end_time"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="离店：1月14日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="预定成功，此房间将整晚保留"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--<Button-->
                <!--android:id="@+id/bt_order_pay"-->
                <!--android:textSize="20sp"-->
                <!--android:text="立即支付"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:background="@android:color/holo_green_light"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <Button
                android:id="@+id/bt_order_delete"
                android:textSize="20sp"
                android:text="取消订单"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
